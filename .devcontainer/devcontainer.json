{
    "name": "weather-pipeline",
    "build": {
        "dockerfile": "../Dockerfile"
    },
    "workspaceFolder": "/app",
    "settings": {
        "python.pythonPath": "/usr/local/bin/python"
    },
    "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
    ],
    "postCreateCommand": "pip install --upgrade pip setuptools wheel && pip install -r requirements.txt",
    "remoteUser": "root"
}
